@import 'nib'

vendor-prefixes = webkit moz o ms official
gadgray = #222222
gadyellow = #f9e10c
title = 'Keep Calm Med'
body = 'Avenir'
pAurea = calc(100vw * 0.618033333)
pAureaMenos = calc(100vw * 0.38)

// Generales
@-ms-viewport
    width device-width

html
    box-sizing border-box
    font-size 16px
*
*:after
*:before
    margin 0
    padding 0
    box-sizing inherit
    transition all 0.3s ease
    &:hover
        transition all 0.3s ease
a
a:visited
a:focus
    text-decoration none
    color inherit
body
    font-family sans-serif
    font-size 1em
    width 100%
    max-width 100vw
    overflow hidden
    font-family body
    background-color gadgray
    color white
h1
h2
h3
h4
h5
h6
    font-weight bolder
    margin 0
    padding 0
    font-family title
img 
    width 100%
    max-width 100%
    
//Special Classes
.bold
    font-weight bolder
// Index
section
    article
        padding 5%
        .content
            width 100%
            h1
                margin 5vh 0 1vh 0
                line-height 0
            .language
                overflow auto
                display block
                text-align center
                margin-bottom 3vh
                h2
                    margin auto
                    text-align center
                    font-size 1.93rem
                    &:first-of-type
                        float left
                    &:nth-of-type(2)
                        display inline-block
                    &:last-of-type
                        float right
            .form
                width 100%
                opacity 0.7
                height 3.12rem
                margin-bottom 5vh
                &:hover
                    opacity 1
                form
                    width 100%
                    height 3.12rem
                    input[type="email"]
                        float left
                        width calc(100% - 3.12rem)
                        height 100%
                        padding 0 5%
                        color gadgray
                        border 0
                    .send
                        width 3.12rem
                        float left
                        position relative
                        height 3.12rem
                        background-color white
                        *
                            width 100%
                            position absolute
                            top 0
                            right 0
                        input[type="submit"]
                            height 3.12rem
                            background transparent
                            border 0
                            z-index 2
                            &:hover + img
                                opacity 1
                        img
                            width 70%
                            z-index 1
                            text-align center
                            margin auto
                            right 0.5rem
                            margin-top 0.7rem
                            border 0
                            opacity .7
            .text
                margin-bottom 5vh
                p
                    text-align justify
                    &:first-of-type
                        margin-bottom 2.5vh
            .social-media
                a
                    position relative
                    &:after
                        height 2px
                        width 0rem
                        background white
                        content ""
                        position absolute
                        bottom -0.2rem
                    &:hover:after
                        width 5rem
                    &:first-of-type
                        float left
                        &:after
                            left 0
                    &:last-of-type
                        float right
                        &:after
                            right 0
        

// Media Query
 
@media (min-width: 993px) //Desktop
    .hidden-xl
        display none
    section
        article
            padding 0
            .magazine
                width pAurea
                float left
                overflow hidden
                text-align right
                position relative
                height 100vh
                padding 5% 7% 5% 3%
                img
                    max-width 120%
            .content
                width pAureaMenos
                float left
                padding 0 7% 0 3%
                padding-top 5%
                .form
                    img
                        
    
@media (max-width: 992px) and (min-width: 769px) //Tablet
    .hidden-mid
        display none
    body
        
@media (max-width: 768px) //Mobile
    .hidden-xs
        display none